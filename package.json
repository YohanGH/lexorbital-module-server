{
  "name": "lexorbital-module-server",
  "version": "0.1.0",
  "description": "Server module for the LexOrbital ecosystem, including conventions, CI setup, documentation structure, and TypeScript scaffold.",
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "release": "standard-version",
    "docs:generate:html": "./scripts/generate-docs.sh html",
    "docs:clean": "rm -rf docs/generated"
  },
  "keywords": [
    "lexorbital",
    "template",
    "module",
    "typescript",
    "infrastructure",
    "ecosystem"
  ],
  "author": "@YohanGH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YohanGH/lexorbital-module-server"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/types": "20.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.2",
    "@semantic-release/release-notes-generator": "14.1.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.11",
    "semantic-release": "25.0.2",
    "standard-version": "^9.5.0"
  },
  "pnpm": {
    "overrides": {
      "fast-json-patch@<3.1.1": ">=3.1.1"
    }
  }
}
